<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#1a472a"
        android:text="\nHoggy Warty Hogwarts Sign Up"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/user_Name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:hint="이름"
        android:inputType="text"/>

    <EditText
        android:id="@+id/user_Number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="전화번호"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/user_address"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="주소 (우편번호)"
        android:inputType="textPostalAddress"/>

    <EditText
        android:id="@+id/user_ID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="ID를 입력하세요"
        android:inputType="text"/>

    <EditText
        android:id="@+id/user_PW"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="PW를 입력하세요"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="PW에는 특수키를 포함해야 합니다"
        android:textColor="#2a623d"/>

    <RadioButton
        android:id="@+id/btnInfoAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="개인정보의 수집 및 이용 동의"
        android:textSize="15dp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="이용자가 제공한 모든 정보는 사용자 자원 관리를 위해 활용하며, 목적 이외의 용도로는 사용되지 않습니다." />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#2a623d"
        android:text="@string/strBtnReturnProfile"
        android:textSize="20dp"
        android:textColor="#D7CCC8" />


</LinearLayout>